<div class= "card">
    <div class="card-body">
        <h5 class="card-title border-top"> <%= @idea.title%></h5>
        <p class="card-text"><%= @idea.description%></p>
    </div>
    <div class="d-flex flex-row justify-content-end">
    <div class= "p-2">
        <a href="<%= edit_idea_path(@idea)%>" class="btn p-2" id="button">Edit</a>
    </div>
    <div class="p-2">
        <%= button_to "Delete", idea_path(@idea), method: :delete, class: "btn p-2", id:"button" %>
    </div>
    </div>
</div>